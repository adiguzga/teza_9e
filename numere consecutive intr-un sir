#include <iostream>
using namespace std;
int n,v[100],i,maxim,nrcons;
int main()
{
	cout<<"Nr de elemente: ";
	cin>>n;
	cout<<"Vectorul: ";
    for(i=1;i<=n;++i)
    {
		cin>>v[i];
		if(v[i]==v[i-1]+1)
		{
			++nrcons;
			maxim=max(maxim,nrcons);
		}
		else
			nrcons=1;
    }
    cout<<"Nr maxim de elemente consecutive: "<<maxim;
    return 0;
}
